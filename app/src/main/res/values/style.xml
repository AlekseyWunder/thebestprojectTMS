<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AppThemeLight" parent="MaterialDrawerTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- MaterialDrawer specific values -->
        <item name="material_drawer_background">@color/material_drawer_background</item>
        <item name="material_drawer_primary_text">@color/colorPrimary</item>
        <item name="material_drawer_primary_icon">@color/colorPrimary</item>
        <item name="material_drawer_secondary_text">@color/material_drawer_secondary_text</item>
        <item name="material_drawer_hint_text">@color/material_drawer_hint_text</item>
        <item name="material_drawer_divider">@color/colorPrimary</item>
        <item name="material_drawer_selected">@color/material_drawer_selected</item>
        <!-- Material 2 defines 12% alpha, primary color -->
        <item name="material_drawer_selected_legacy">@color/colorPrimary</item> <!-- Defines the color if legacy style (Material 1, is enabled) -->
        <item name="material_drawer_selected_text">@color/colorPrimary</item>
        <item name="material_drawer_header_selection_text">@color/colorPrimary</item>
        <item name="material_drawer_header_selection_subtext">@color/material_drawer_dark_header_selection_subtext</item>
        <item name="material_drawer_legacy_style">false</item> <!-- Enables legacy Material 1 style -->
        <item name="drawerArrowStyle">@style/DrawerArrowStyleLight</item>
    </style>

    <style name="DrawerArrowStyleLight" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/black</item>
    </style>

<style name="ToolBar" parent="MaterialDrawerTheme.Light.DarkToolbar.ActionBar">
    <item name="android:textColorPrimary">@color/colorAccent</item>
</style>
    <style name="LoginEditText" >
        <item name="colorOnBackground">#432B0B0B</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">4dp</item>
    </style>
</resources>